{
  "name": "node-api",
  "version": "0.0.1",
  "private": true,
  "description": "Backend service for managing movies and their ratings",
  "homepage": "https://github.com/zdrazil/node-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zdrazil/node-api"
  },
  "license": "MIT",
  "author": "Vladimir Zdrazil",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "db": "dbmate h",
    "db:codegen": "pgtyped -c pgtyped.json",
    "db:create-migration": "dbmate new",
    "db:create-seed": "dbmate -e DBMATE_DATABASE_URL -d ./db/seeds/ new",
    "db:migrate": "dbmate -e DBMATE_DATABASE_URL up",
    "db:seed": "dbmate -e DBMATE_DATABASE_URL -d ./db/seeds/ up",
    "dev": "tsx --watch src/app.ts",
    "format:sql": "pg-formatter --config .pg_format --inplace -- ./src/**/*.sql",
    "generate:client-types": "npx openapi-typescript http://127.0.0.1:3000/api-docs/json -o ./client.schema.d.ts",
    "lint": "concurrently --group \"npm:lint:*\"",
    "lint:eslint": "eslint --cache \"$INIT_CWD/src/**/*.ts\" --fix",
    "lint:ts": "tsc --noEmit --incremental",
    "start": "tsx src/app.ts",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --runInBand",
    "test:watch": "yarn test --watch --runInBand"
  },
  "dependencies": {
    "@fastify/auth": "4.6.1",
    "@fastify/autoload": "5.10.0",
    "@fastify/cors": "9.0.1",
    "@fastify/env": "4.4.0",
    "@fastify/helmet": "11.1.1",
    "@fastify/jwt": "8.0.1",
    "@fastify/postgres": "5.2.2",
    "@fastify/request-context": "5.1.0",
    "@fastify/sensible": "5.6.0",
    "@fastify/swagger": "8.15.0",
    "@fastify/swagger-ui": "4.1.0",
    "@fastify/type-provider-json-schema-to-ts": "3.0.0",
    "@fastify/type-provider-typebox": "4.1.0",
    "@fastify/under-pressure": "8.5.1",
    "@gquittet/graceful-server": "5.2.1",
    "@graphql-tools/load-files": "7.0.0",
    "@graphql-tools/merge": "9.0.7",
    "@pgtyped/runtime": "2.3.0",
    "@sinclair/typebox": "0.33.7",
    "altair-fastify-plugin": "7.3.5",
    "dbmate": "2.20.0",
    "desm": "1.3.1",
    "fastify": "4.28.1",
    "fluent-json-schema": "5.0.0",
    "fp-ts": "2.16.9",
    "graphql": "16.9.0",
    "json-schema-to-ts": "3.1.1",
    "mercurius": "14.1.0",
    "mercurius-codegen": "5.0.5",
    "node-postgres": "0.6.2",
    "pg": "8.12.0",
    "postgres": "3.4.4",
    "ts-case-convert": "2.0.7"
  },
  "devDependencies": {
    "@eslint/compat": "1.1.0",
    "@eslint/js": "9.6.0",
    "@ianvs/prettier-plugin-sort-imports": "4.3.0",
    "@pgtyped/cli": "2.3.0",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/eslint__js": "8.42.3",
    "@types/jest": "29.5.12",
    "@types/node": "20.14.10",
    "@types/pg": "8.11.6",
    "@typescript-eslint/parser": "7.16.0",
    "concurrently": "8.2.2",
    "eslint": "9.6.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.6.0",
    "eslint-plugin-sort-destructure-keys": "2.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "3.2.0",
    "globals": "15.8.0",
    "jest": "29.7.0",
    "pg-formatter": "2.0.6",
    "pino-pretty": "11.2.2",
    "prettier": "3.3.3",
    "prettier-plugin-embed": "0.4.15",
    "prettier-plugin-jsdoc": "1.3.0",
    "prettier-plugin-packagejson": "2.5.0",
    "testcontainers": "10.13.0",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "tsx": "4.16.2",
    "typescript": "5.5.3",
    "typescript-eslint": "7.16.0"
  },
  "packageManager": "yarn@4.3.1",
  "engines": {
    "node": ">=20"
  }
}
